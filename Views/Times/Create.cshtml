@model Times.Models.Time

@{
    ViewData["Title"] = "Cadastrar";
}

<header class="p-4 pb-4 mb-4 border-bottom">
        <a href="/frontend/index.html" class="d-flex align-items-center text-dark text-decoration-none">
            <img src="http://www.interfocus.com.br/Content/images/logo_interfocus_default_bottom.png" alt="logo" width="165">
 
            <span class="fs-4">&nbsp Vendinha Interfocus</span>
        </a>
</header>

<h1>Tela de cadastro</h1>

<h4>Cadastrar nova dívida</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @*  Nome  *@
                <label asp-for="Nome" class="control-label">Nome Completo</label>
                <input asp-for="Nome" class="form-control" maxlength="60" placeholder="Diego Fernando de Souza" required />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*  CPF  *@
                <label asp-for="CPF" class="control-label">CPF</label>
                <input asp-for="CPF" class="form-control" onkeypress="$(this).mask('000.000.000-00');" maxlength="11" placeholder="123.456.789-10" required />
                <span asp-validation-for="CPF" class="text-danger"></span>
            </div>
            

            <div class="form-group p-2 mb-1">
                     @*  Descrição  *@
                    <div class="row">
                        <div class="col-md-8">
                            <label asp-for="Descricao" class="control-label">Descricao</label>
                            <input asp-for="Descricao" class="form-control" maxlength="120" placeholder="Digite aqui o que foi comprado" required />
                        </div>                        
                        <div class="col-md-4">
                            @*  Valor  *@
                            <label for="dividaValorInput">Valor Devido</label>
                            <input asp-for="Valor" type="number"class="form-control" placeholder="R$ 0.00" min=".01" step=".01" required>
                        </div>    
                    </div>    
                </div>

            <div class="form-group">
                @*  Button  *@
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a listagem</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.15/jquery.mask.min.js"></script>
}
